<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingTop="10dp">
        <com.ywqln.yqdroid.widgets.view.CircleImageView
            android:id="@+id/img_master_header"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/zy"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_header"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_infoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布内容"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_infoTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-04-23"
            android:textColor="#c0c0c0"
            android:textSize="11sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#eeeeee"
        android:minHeight="30dp"
        android:orientation="vertical">

    </LinearLayout>
</RelativeLayout>